<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.projectx.fisioapp.app.fragment.AppointmentDetailFragment">

    <ImageView
        android:id="@+id/appointment_detail_map_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Paciente"
            tools:text="Paciente:" />

        <TextView
            android:id="@+id/appointment_detail_customer_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rodrigo Limpias" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Hora:"
            tools:text="Hora:" />

        <TextView
            android:id="@+id/appointment_detail_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10.30am" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Precio:"
            tools:text="Precio:" />

        <TextView
            android:id="@+id/appointment_detail_customer_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="35€" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Dirección:"
            tools:text="Dirección:" />

        <TextView
            android:id="@+id/appointment_detail_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Calle Goya #15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Estado:"
            tools:text="Estado:" />

        <TextView
            android:id="@+id/appointment_detail_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/detail_appointment_confirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmada"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Estado:"
            tools:text="Estado:" />

        <TextView
            android:id="@+id/appointment_detail_cancelled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/detail_appointment_cancelled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmada"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.75"
            android:text="Observaciones:"
            tools:text="Observaciones:" />

        <TextView
            android:id="@+id/appointment_detail_extra_info_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.25"
            tools:text="JUST A REALLY LONG TEXT TO SIMULATE MULTILINE EXTRA INFO FIELD AND HOW IT WOULD LOOK ON SCREEN WHEN DISPLAYED" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SAVE"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/appointment_save_button"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CANCEL"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/appointment_cancel_button"/>
    </LinearLayout>

</LinearLayout>
